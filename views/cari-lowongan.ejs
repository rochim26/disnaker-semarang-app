<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Lowongan Pekerjaan</title>
    <!-- Tambahkan Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Tambahkan CSS Kustom untuk styling tambahan -->
    <style>
      .banner {
        background-color: #2680eb;
        color: #fff;
        text-align: center;
        padding: 10px;
        font-size: 1.2rem;
        margin-bottom: 20px;
      }
      body {
        background-color: #f8f9fa;
      }

      .navbar {
        background-color: #fff;
        margin-bottom: 20px;
      }

      .container {
        padding: 20px;
      }

      .job-listings-container {
        display: grid;
        gap: 20px;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      }

      .job-listing-card {
        background-color: #fff;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
      }

      .job-listing-card img {
        max-width: 100%;
        height: auto;
      }

      .job-listing-card h3 {
        margin-top: 15px;
        font-size: 1.25rem;
      }

      .job-listing-card p {
        margin: 10px 0;
        color: #6c757d;
      }

      .job-listing-card button {
        margin-top: 15px;
      }

      .job-listing-card button:hover {
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
      }

      .search-form input[type="search"] {
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        background-color: #f1f3f5;
        outline: none;
        box-shadow: none;
        transition: background-color 0.3s;
      }

      .search-form input[type="search"]::placeholder {
        color: #6c757d;
      }

      .search-form button {
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        background-color: #2680eb;
        color: #fff;
        cursor: pointer;
        outline: none;
        box-shadow: none;
        transition: background-color 0.3s;
      }

      .search-form button:hover {
        background-color: #a10f15;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <!-- Logo dengan tautan ke halaman utama -->
        <a class="navbar-brand" href="/">
          <img
            src="https://ser.smarteschool.id/img/logo-smart-e-resource.svg"
            alt="Logo"
            width="200"
          />
        </a>

        <!-- Tombol toggle navbar untuk perangkat mobile -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Tautan Navbar -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Beranda</a>
            </li>
            <!-- Tambahkan tautan navigasi lain di sini jika diperlukan -->
          </ul>

          <!-- Form Pencarian -->
          <form
            class="search-form d-flex mx-2 my-lg-0"
            action="/cari-lowongan"
            method="get"
          >
            <input
              class="form-control me-2"
              type="search"
              name="keyword"
              placeholder="Cari Daftar Lowongan Pekerjaan..."
              aria-label="Cari"
            />
            <button class="btn" type="submit">Cari</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Banner Pencarian -->
    <div class="banner">Hasil Pencarian: <%= keyword %></div>

    <!-- Daftar Lowongan Pekerjaan -->
    <div class="container">
      <h1 class="my-4">Daftar Lowongan Pekerjaan</h1>

      <div class="job-listings-container">
        <% jobListings.forEach((job) => { %>
        <div class="job-listing-card">
          <img src="<%= job.company %>" alt="logo" />
          <h3><%= job.title %></h3>
          <p><%= job.endDate %></p>
          <button class="btn btn-primary detailButton" data-id="<%= job.id %>">
            Detail
          </button>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Modal Bootstrap -->
    <div
      class="modal fade"
      id="jobModal"
      tabindex="-1"
      aria-labelledby="jobModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="jobModalLabel">
              Detail Lowongan Pekerjaan
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Tutup"
            ></button>
          </div>
          <div class="modal-body" id="jobModalBody">
            <!-- Isi konten modal akan dimuat di sini -->
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Tutup
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Tambahkan Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
      $(document).ready(function () {
        function getDetailLowongan(id) {
          $.post("/get_detail_lowongan", { id: id }, function (data) {
            $("#jobModalBody").html(data);
            $("#jobModal").modal("show"); // Tampilkan modal Bootstrap
          });
        }

        $(".detailButton").on("click", function () {
          const id = $(this).attr("data-id");
          getDetailLowongan(id);
        });
      });
    </script>
  </body>
</html>
